{
    "compilerOptions": {
        "target": "esnext",
        "module": "ES2022",
        "moduleResolution": "nodenext",
        "importHelpers": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "baseUrl": ["."],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "src/*.ts",
        "src/*.vue"
    ]
}